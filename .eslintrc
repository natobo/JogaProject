{
  // All the eslint config in the npm package is here https://github.com/wesbos/eslint-config-wesbos
  "extends": ["wesbos"],
  "plugins": ["html"],
  "rules": {
    "react/prop-types": ["off"],
    "no-restricted-syntax": ["off"],
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ],
    "jsx-a11y/label-has-for": [
      "error",
      {
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ],
    "react/jsx-props-no-spreading": ["off"]
  }
}
